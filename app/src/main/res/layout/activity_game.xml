<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mikkel.hangman.Game"
    android:background="@android:color/holo_green_dark"
    android:orientation="vertical"
    android:weightSum="1">


    <TextView
        android:text="The Hangman Game!"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView4"
        android:textAlignment="center" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/galge"
        android:id="@+id/galge"
        android:layout_marginTop="33dp"
        android:layout_alignParentStart="true"
        android:layout_weight="0.76" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true"
        android:id="@+id/word"
        android:layout_weight="0.16" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >


        <Button
            android:text="A"
            android:id="@+id/A"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:textSize="20sp" />

        <Button
            android:text="B"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:id="@+id/B"
            android:layout_weight="1" />

        <Button
            android:text="C"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:id="@+id/C"
            android:layout_weight="1" />

        <Button
            android:text="D"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:id="@+id/D"
            android:layout_weight="1" />

        <Button
            android:text="E"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:id="@+id/E"
            android:layout_weight="1" />

        <Button
            android:text="F"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:id="@+id/F"
            android:layout_weight="1" />

        <Button
            android:text="G"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:id="@+id/G"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <Button
            android:text="H"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:id="@+id/H"
            android:layout_weight="1" />

        <Button
            android:text="I"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:id="@+id/I"
            android:layout_weight="1" />

        <Button
            android:text="J"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:id="@+id/J"
            android:layout_weight="1" />

        <Button
            android:text="K"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:id="@+id/K"
            android:layout_weight="1" />

        <Button
            android:text="L"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:id="@+id/L"
            android:layout_weight="1" />

        <Button
            android:text="M"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:id="@+id/M"
            android:layout_weight="1" />

        <Button
            android:text="N"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:id="@+id/N"
            android:layout_weight="1" />


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"

        android:layout_height="wrap_content">


        <Button
            android:text="O"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:id="@+id/O"
            android:layout_weight="1" />

        <Button
            android:text="P"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:id="@+id/P"
            android:layout_weight="1" />

        <Button
            android:text="Q"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:id="@+id/Q"
            android:layout_weight="1" />

        <Button
            android:text="R"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:id="@+id/R_letter"
            android:layout_weight="1" />

        <Button
            android:text="S"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:id="@+id/S"
            android:layout_weight="1" />

        <Button
            android:text="T"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:id="@+id/T"
            android:layout_weight="1" />

        <Button
            android:textSize="20sp"
            android:text="U"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:id="@+id/U"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <Button
            android:text="V"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:id="@+id/V"
            android:layout_weight="1" />

        <Button
            android:text="W"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:id="@+id/W"
            android:layout_weight="1" />

        <Button
            android:text="X"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:id="@+id/X"
            android:layout_weight="1" />

        <Button
            android:text="Y"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:id="@+id/Y"
            android:layout_weight="1" />

        <Button
            android:text="Z"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:id="@+id/Z"
            android:layout_weight="1" />

        <Button
            android:text="Æ"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:id="@+id/Æ"
            android:layout_weight="1" />

        <Button
            android:text="Ø"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:id="@+id/Ø"
            android:layout_weight="1" />

        <Button
            android:text="Å"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:id="@+id/Å"
            android:layout_weight="1" />

    </LinearLayout>
</LinearLayout>
